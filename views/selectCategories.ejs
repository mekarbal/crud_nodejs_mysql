<!DOCTYPE html>
<html>

<head>
    <title>Categories</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1 class="text-center">Add Category</h1>
                <form method="post" action="/insertCat">
                    <div class="mb-3">
                        <label for="category_name" class="form-label">
                Category Name
              </label>
                        <input type="text" class="form-control" name="category_name" id="category_name" required />
                    </div>

                    <button class="btn btn-primary">Add Category</button>
                </form>
            </div>

            <div class="col-md-6">
                <h1 class="text-center">Categories</h1>
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Category id</th>
                            <th scope="col">Category name</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% categories.forEach(function (category) { %>
                            <tr>
                                <th>
                                    <%=category.id%>
                                </th>
                                <td>
                                    <%=category.name%>
                                </td>
                                <td>
                                    <a href="/edit?id=<%=category.id %>" class="btn btn-primary">
                    Edit
                  </a>
                                    <a href="/delete?id=<%=category.id %>" onclick="return confirm('Are you sure you want to delete')" class="btn btn-danger">
                    DELETE
                  </a>
                                </td>
                            </tr>
                            <%});%>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Products Section -->
        <div class="row mt-5 justify-content-center">
            <h1 class="text-center">Add Product</h1>
            <form method="post" action="/insertProduct" style="height: 200; width: 500px">
                <div class="mb-3">
                    <div class="form-group">
                        <label for="procduct_name" class="form-label">Product Name</label>
                        <input type="text" class="form-control" name="product_name" id="product_name" required />
                    </div>
                    <div class="form-group">
                        <label for="procduct_price" class="form-label">
                Product Price
              </label>
                        <input type="text" class="form-control" name="product_price" id="product_price" required />
                    </div>
                    <div class="form-group">
                        <label for="procduct_price" class="form-label">
                Product Category
              </label>

                        <select class="form-control" name="category_id" id="category_id" required>
                <option value="" required>select option</option>
                <% categories.forEach(function (category) { %>
                <option value="<%=category.id%>"><%=category.name%></option>
                <%});%>
              </select>
                    </div>
                </div>

                <button class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
    <script src=" https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js " integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW " crossorigin="anonymous "></script>
</body>

</html>